<ActorFrame> <children>
	<Layer 
		Type="ActorFrame"
		GainFocusCommand="linear,0.2;zoom,1.4"
		LoseFocusCommand="linear,0.2;zoom,0.7"
	><children>
		<Layer 
			Condition="SIMPLY_LOVE.game ~= 'techno'"
			Type="ActorFrame"
		><children>
			<Layer
				File="../4panels"
				EnabledCommand="%SIMPLY_LOVE(function(self) if game == 'dance' then self:diffuse(ColorRGB(0)) else self:diffuse(.16,.24,.27,1) end end)"
				DisabledCommand="%SIMPLY_LOVE(function(self) if game == 'dance' then self:diffuse(.24,.31,.35,1) else self:diffuse(.12,.2,.23,1) end end)"
				OnCommand="%SIMPLY_LOVE.FadeIn"
				OffCommand="%SIMPLY_LOVE.OutCommand"
			/>
			<Layer
				File="../5panels"
				EnabledCommand="%SIMPLY_LOVE(function(self) if game == 'pump' then self:diffuse(ColorRGB(0)) else self:diffuse(.16,.24,.27,1) end end)"
				DisabledCommand="%SIMPLY_LOVE(function(self) if game == 'pump' then self:diffuse(.24,.31,.35,1) else self:diffuse(.12,.2,.23,1) end end)"
				OnCommand="%SIMPLY_LOVE.FadeIn"
				OffCommand="%SIMPLY_LOVE.OutCommand"
			/>
		</children></Layer>
		<Layer 
			Condition="SIMPLY_LOVE.game == 'techno'"
			Type="ActorFrame"
		><children>
			<Layer
				File="../8panels"
				EnabledCommand="%SIMPLY_LOVE(function(self) self:diffuse(ColorRGB(0)) end)"
				DisabledCommand="diffuse,.24,.31,.35,1"
				OnCommand="%SIMPLY_LOVE.FadeIn"
				OffCommand="%SIMPLY_LOVE.OutCommand"
			/>
			<Layer
				File="../1panel"
				EnabledCommand="%SIMPLY_LOVE(function(self) self:diffuse(.16,.24,.27,1) end)"
				DisabledCommand="diffuse,.12,.2,.23,1"
				OnCommand="%SIMPLY_LOVE.FadeIn"
				OffCommand="%SIMPLY_LOVE.OutCommand"
			/>
		</children></Layer>
		<Layer
			File="1Player"
			InitCommand="y,130"
			EnabledCommand="%SIMPLY_LOVE(function(self) self:diffuse(1,1,1,1) end)"
			DisabledCommand="diffuse,.24,.31,.35,1"
			OnCommand="%SIMPLY_LOVE.FadeIn"
			OffCommand="%SIMPLY_LOVE.OutCommand"
		/>
	</children></Layer>
</children> </ActorFrame>
